num1 = int(input(" Digite um numero: "))
num2 = int(input(' Digite mais um numero: '))
num3 = int(input(" Digite só mais um numero: "))

soma = num1 + num2 + num3
print(soma)

dividir = num1 /num2/num3
print(dividir)

multiplicar = num1*num2*num3
print(multiplicar)

subtrair = num1-num2-num3
print(subtrair)
